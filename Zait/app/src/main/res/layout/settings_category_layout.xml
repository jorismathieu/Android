<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:clickable="true"
              android:background="@drawable/simple_ripple_effect"
              android:layout_width="match_parent"
              android:layout_height="80dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="80dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/main_setting_icon"
            android:src="@drawable/ic_settings_gray_24dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/main_settings_title"
            android:text="Test"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/main_settings_subtitle"
            android:text="Test subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main colors -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>

        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="colorControlHighlight">@color/primaryColor</item>

        <item name="colorAccent">@color/primaryDarkColor</item>

        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>


    </style>

    <!-- Spinners -->

    <style name="spinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MySpinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:dropDownSelector">?attr/selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="overlapAnchor">true</item>
    </style>

    <style name="SubSettingTitleStyle">
        <item name="android:textSize">@dimen/sub_setting_title_size</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="SubSettingOptionStyle">
        <item name="android:textSize">@dimen/sub_setting_option_sizse</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primaryColor</item>
    </style>

</resources>
